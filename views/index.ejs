<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Posts | ShareMind</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <!-- Custom Stylesheet -->
    <link rel="stylesheet" href="/index.css">
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>ShareMind Feed</h1>
            <div class="header-buttons">
                <a href="/" class="btn btn-secondary"><i class="bi bi-house-door-fill"></i> Back to Home</a>
                <a href="/posts/new" class="btn btn-primary"><i class="bi bi-plus-circle-fill"></i> Create New Post</a>
            </div>
        </div>

        <div class="posts-container">
            <% for(let post of posts) { %>
                <div class="post-card">
                    <div class="card-body">
                        <h3 class="card-user"><i class="bi bi-person-circle"></i> @<%= post.username %></h3>
                        <p class="card-content"><%= post.content %></p>
                    </div>
                    <div class="card-actions">
                         <a href="/posts/<%= post.id %>" class="btn btn-view"><i class="bi bi-eye-fill"></i> View</a>
                         <a href="/posts/<%= post.id %>/edit" class="btn btn-edit"><i class="bi bi-pencil-fill"></i> Edit</a>
                        <form action="/posts/<%= post.id %>?_method=DELETE" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-danger"><i class="bi bi-trash-fill"></i> Delete</button>
                        </form>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</body>
</html>

